{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@app*": ["./app/[lang]*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./public/assets/*"],
      "@lib/*": ["./lib/*"],
      "@types/*": ["./types/*"],
      "@icons/*": ["./icons/*"],
      "@mocks/*": ["./mocks/*"]
    }
  },
  "include": ["next-env.d.ts", "commitlint.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "jest.setup.js", "jest.config.js"],
  "exclude": ["node_modules"]
}
