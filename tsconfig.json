{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app*": [
        "./app/[lang]*"
      ],
      "@components/*": [
        "./app/[lang]/components/*"
      ],
      "@assets/*": [
        "./public/assets/*"
      ],
      "@lib/*": [
        "./app/[lang]/lib/*"
      ],
      "@types/*": [
        "./app/[lang]/types/*"
      ],
      "@icons/*": [
        "./app/[lang]/icons/*"
      ],
      "@mocks/*": [
        "./app/[lang]/mocks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "commitlint.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
